<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenxianping.blog.dao.BlogCarouselMapperCustom">
  <resultMap id="BaseResultMap" type="com.chenxianping.blog.entity.BlogCarousel">
    <id column="Id" jdbcType="INTEGER" property="id" />
    <result column="image_url" jdbcType="VARCHAR" property="imageUrl" />
    <result column="target_url" jdbcType="VARCHAR" property="targetUrl" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
    <result column="type" jdbcType="TINYINT" property="type" />
    <result column="is_show" jdbcType="TINYINT" property="show" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <select id="selectWithCondition" resultMap="BaseResultMap">
    SELECT Id, image_url, target_url, sort, type, is_show, create_time, update_time
    FROM blog_carousel
    WHERE 1
    <if test="0 != type and null != type">
      AND type = #{type}
    </if>
    <if test="null != showStatus">
      AND is_show = #{showStatus}
    </if>
    ORDER BY sort DESC
  </select>
</mapper>