<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenxianping.blog.dao.BlogCategoryMapperCustom">
  <resultMap id="BaseResultMap" type="com.chenxianping.blog.entity.BlogCategory">
    <id column="category_id" jdbcType="INTEGER" property="categoryId" />
    <result column="category_name" jdbcType="VARCHAR" property="categoryName" />
    <result column="category_icon" jdbcType="VARCHAR" property="categoryIcon" />
    <result column="category_amount" jdbcType="INTEGER" property="categoryAmount" />
    <result column="category_column" jdbcType="TINYINT" property="categoryColumn" />
    <result column="category_sort" jdbcType="INTEGER" property="categorySort" />
    <result column="is_deleted" jdbcType="TINYINT" property="deleted" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <select id="selectAllForPage" parameterType="int" resultMap="BaseResultMap">
    SELECT category_id, category_name, category_icon, category_amount,
           category_column, category_sort, is_deleted, create_time, update_time
    FROM blog_category
    WHERE is_deleted = 0
    <if test="null != categoryColumn and -1 != categoryColumn and 0 != categoryColumn">
      and category_column = #{categoryColumn}
    </if>
    <if test="null != keywords and '' != keywords ">
      and category_name like #{keywords}
    </if>
    ORDER BY category_sort desc
    LIMIT #{offset}, #{pageSize} ;
  </select>
</mapper>